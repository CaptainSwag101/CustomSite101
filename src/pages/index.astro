---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h1>🧑‍🚀 Hello, World!</h1>
			<p>
				My name is James. I'm a computer scientist, software engineer, and
				recent college graduate. I've been interested in computers since a young age,
				and nearly as far back as I can remember, I've been tinkering with or using computers.
			</p>
		</main>
		<Footer />
	</body>
</html>
